<div class="con-med border border-primary rounded p-3">
<div class="text-center">
  <h1 class="text-center mb-4">Create App Listing</h1>
    <% if @app.errors.any? %>
      <% @app.errors.full_messages.each do |message| %>
        <div class="alert alert-primary" role="alert">
          <%= message %>
        </div>
        <% end %>
      <% end %>
</div>
<%= form_for @app, url: {action: "create"} do |f| %>
  <div class="form-group mb-4">
  <b><%= f.label :Name %></b>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name..' %>
  </div>
  <div class="form-group mb-4">
  <b><%= f.label :Short_Description %></b>
    <%= f.text_field :blurb, class: 'form-control', placeholder: 'Short description..' %>
  </div>
  <div class="form-group mb-4">
  <b><%= f.label :Price %></b>
  <div class="input-group">
    <div class="input-group-prepend">
    
      <div class="input-group-text"><b>$</b></div>
    </div>
      <%= f.text_field :price, class: 'form-control', placeholder: 'Price..' %>
  </div>
  </div>
  <div class="form-group mb-4">
    <b><%= f.label :Icon %></b>
    <%= f.file_field :icon, class: 'form-control-file' %>
  </div>
  <div class="form-group mb-4">
  <b><%= f.label :Extended_Description %></b>
    <%= f.text_area :description, class: 'form-control', placeholder: 'Extended description..' %>
  </div>
  <div class="form-group mb-4">
    <b><%= f.label :Screenshots %></b>
    <%= f.file_field :images, multiple: true, class: 'form-control-file' %>
  </div>
  <div>
    <%= f.submit "Submit", class:'btn btn-primary' %>
  </div>
<% end %>
</div>
